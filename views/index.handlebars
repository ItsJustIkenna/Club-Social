{{!-- Column 1 --}}

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-3 is-white ">

        {{!-- Feed Settings --}}

        <div class="box has-background-black-bis has-text-white">

          {{!-- Title --}}

          <h2 class="settings has-text-centered is-size-4">Feed Settings</h2>

          {{!-- School --}}

          <div class="field">
            <label class="label has-text-white">*school:</label>
            <div class="control">
              <div class="select">
                <select>
                  <option class="has-text-white">Select School</option>
                  <option>{{school}}</option>
                </select>
              </div>
            </div>
          </div>

          {{!-- Subject --}}

          <div class="field">
            <label class="label has-text-white">Subject:</label>
            <div class="control">
              <div class="select">
                <select>
                  <option class="has-text-white">Select a subject</option>
                  <option>{{subject}}</option>
                </select>
              </div>
            </div>
          </div>

          {{!-- Submit --}}

          <div class="field">
            <div class="control">
              <button class="button is-link">Submit</button>
            </div>

          </div>
        </div>
      </div>

      {{!-- Column 2 --}}

      <div class="column is-9">

        {{!-- Title --}}

        <div class="column is-12">

        <h1 class="title has-text-white has-text-centered is-size-6">Welcome to club social! We are an anonymous chat
          for colleges and Universities.</h1>

        <input class="input is-small" type="text" placeholder="Text input">

        <textarea class="textarea is-small radius-rounded" placeholder="e.g. Hello world"></textarea>

        <div class="field is-right">
          <div class="control">
            <button class="button is-link">Select School</button>
          </div>
        </div>

        <div class="field is-right">
          <div class="control">
            <button class="button is-link">Select Subject</button>
          </div>
        </div>

        <div class="field is-right">
          <div class="control">
            <button class="button is-link">Delete</button>
          </div>
        </div>

        <div class="field is-right">
          <div class="control">
            <button class="button is-link">Create Post</button>
          </div>
        </div>
        </div>
      </div>
    </div>
</section>