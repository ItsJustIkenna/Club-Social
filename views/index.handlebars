    <div class="columns">

      {{!-- Food Settings Column 1 --}}

      <div class="column is-3 is-white ">

        {{!-- Feed Settings --}}

        <div class="box has-background-black-bis has-text-white" style=>

          {{!-- Title --}}

          <h2 class="settings has-text-centered is-size-3" style="font-family:monospace;">Feed Settings</h2>

          {{!-- School --}}

          <div class="field">
            <label class="label has-text-white">School</label>
            <div class="control">
              <div class="select">
                <select class="option" id="feed-settings-school-selector">
                  <option class="has-text-white" value="" selected>Select School</option>
                  {{#each schools }}
                  <option class="has-text-black" value="{{school}}">{{school}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
          </div>

          {{!-- Submit --}}

          <div class="field">
            <div class="control">
              <button id="settings-button" class="button is-link">Submit</button>

            </div>

          </div>
        </div>
      </div>

      {{!-- Column 2 --}}

      <div class="column is-9" style="background-color: rgb(61, 61, 61)" ;>
       

        {{!-- Make Post --}}

        <div class="column is-12">
          

          {{!-- Title --}}

          <h1 class="title has-text-white has-text-centered is-5">Welcome to club social! We are an anonymous chat
            for colleges and Universities.</h1>

          {{!-- Input Section --}}

          

          <textarea class="textarea is-small radius-rounded message-input" placeholder="e.g. Hello world" id="post-text"></textarea>

          {{!-- Select School --}}

          <div class="column">
            <div class="field">
              <div class="control">
                <div class="select">
                  <select class="option" id="feed-school-selector">
                    <option class="has-text-white" value="" selected>Select School</option>
                    {{#each schools }}
                    <option class="has-text-white" value="{{school}}">{{school}}</option>
                    {{/each}}
                  </select>
                </div>
                {{!-- Select Subject --}}
                <div class="select">
                  <select>
                    <option class="has-text-white">Select a subject</option>
                    {{#each subjects }}
                    <option>{{subject}}</option>
                    {{/each}}
                  </select>
                </div>
                {{!-- Create Post --}}
                <button class="button is-link" id="create-post">Create Post</button>
                {{!-- Delete --}}
                <button class="button is-danger">
                  <span>Delete Post</span>
                  <span class="icon is-small">
                    <i class="fas fa-times"></i>
                  </span>
                </button>

              </div>
            </div>


            {{!-- View Post--}}
            
            <div class="column is-12">

              {{!-- Post Title --}}

              <div class="block">
                <div style="clear: both">
                  <h1 style="float: left" class="school-post-title has-text-lelt pl-6 is-size-3">School{{School}}</h1>
                  </h1>
                </div>
              </div>

              {{!-- Post Message --}}

              <textarea class="textarea" placeholder="" disabled>Message{{message}}</textarea>

              {{!-- Delete Post --}}

              <div class="field is-right">
               <button class="button is-danger">
